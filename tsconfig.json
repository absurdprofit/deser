{
	"compilerOptions": {
		"target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}